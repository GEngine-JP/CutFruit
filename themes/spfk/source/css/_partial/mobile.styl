.left-col {
    display: none
}
.mid-col {
    left: 0
}
#header{
    .header-nav{
        position: relative
    }
}
.header-author{
    &.fixed{
        position: fixed
        top: -20px
        padding-top: 7px
        height: 39px
        width: 100%
        background-color: #444
        color: #FFF
    }
}
.overlay{
    .slider-trigger{
        position: absolute
        z-index: 101
        bottom: 0
        left: 0
        width: 42px
        height: 42px
        &:hover{
            background: #444
        }
        &:before{
            color: #ddd
            content: "\f00b"
            font: 16px FontAwesome
            width: 16px
            height: 16px
            margin-left: 9px
            margin-top: 14px
            display: block
        }
    }
}
.article-header{
    padding: 5px 20px
    h1{
        margin-bottom: 0
    }
}
.header-subtitle{
    padding: 0 24px
}

.article-info-index.article-info{
  padding-top: 10px
  margin: 0 20px
}
.article-info-post.article-info{
    margin: 0 20px
    padding-top: 10px
    border: none
}
.article-more-link{
    margin-top: 20px
    float: left
}
#viewer-box .viewer-box-l{
    font-size: 14px
}
.article{
    margin: 10px
    font-size: 14px
    .article-entry{
        padding: 0 20px 0 20px
    }
    .article-title{
        font-size: 18px
        padding-right: 96px
        display: block
        margin: 0
        text-overflow: ellipsis
        white-space: nowrap
        overflow: hidden
    }
    .article-meta{
        width: auto
        height: 30px
        margin-top: -8px
        padding-right: 10px
        position: ralative
        .article-date{
            font-size: 12px
            border-radius: 0
            color: #666
            background: none
            height: auto
            padding: 0
            margin: 0
            width: 100%
            text-align: left
            margin-left: 10px
            time{
                width: auto
                float: right
                margin-right: 10px
            }
        }
        .article-tag-list{
            margin-top: 7px
            position: absolute
            right: 10px
            top: 0
            &:before{
                float: left
                margin-top: 1px
                left: 0
            }
            .article-tag-list-item{
                float: left
                padding-left: 0
                width: auto
                max-width: 83px
            }
        }
        .article-category{
            margin-top: 7px
            position: absolute
            right: 10px
            top: -30px
            &:before{
                float: left
                margin-top: 1px
                left: 15px
            }
            .article-category-link{
                max-width: 83px
                width: auto
                padding-left:10px
            }
        }
    }
    .article-nav-link-wrap{
        margin: 5px 0
        strong{
            float: left
            margin-right: 5px
        }
    }
    #article-nav-older{
        float: none
        display: block
    }
}
.share{
    padding: 3px 10px
}
.duoshuo {
    padding: 0 13px
}
#disqus_thread {
    padding: 0 13px
}

#mobile-nav{
    display: block
}

#page-nav .extend{
    opacity: 1
}

.instagram .open-ins{
    left: 2px
    top: -30px
    color: #aaa
}
.info-on-right{
    float: initial
}
.archives-wrap{
    margin: 10px 10px 0px
    padding: 10px
    .archive-article-title{
        font-size: 14px
    }
    .archive-year-wrap{
        position: relative
        padding: 0 0 0 0
        a{
            padding: 0 0 0 0
        }
    }
    .article-meta{
        .archive-article-date{
            font-size: 12px
            margin-right: 10px
            margin-top: -5px
        }
        .article-tag-list-link{
            font-size: 12px
        }
    }
}
.archives{
    .archive-article{
        padding: 10px 0
        margin-left: 0
    }
}

#footer {
    bottom: 10px
    .footer-left{
        float: initial
        margin-bottom: 10px
    }
    .footer-right{
        float: initial
        margin-bottom: 10px
    }
}
#container .visit {
    margin-top: 1em
}

/*目录*/
#tocButton {
    z-index: 100
    position: fixed
    width: 71px
    height: 29px
    left: 2px
    top: auto
    bottom: 5px
    border: none
    padding: 0.2em 0.4em
    border-radius: 6px
    background-color: #ee6252
    font-size: 14px
    text-align: center
    color: #fff
}
.toc-article {
    display: none
    z-index: 99
    left: 0
    height: auto
    width: auto
    bottom: 22px
    overflow: auto
    margin-left: 6px
    background: #3f3f3f
    font-size: 0.9rem
    line-height: 1.5em
    padding: 0.3rem
    border: 1px solid #080808
    .toc-title {
        display: none
    }
    .toc {
        padding: 0.5em
    }
    ol {
        margin: 0
        padding: 0.5em
        border-radius: 5px
        ol {
            padding: 0.1em 0
            padding-left: 1.2em
        }
    }
    a {
        color: #767676
    }
}
/*导航*/
.scroll {
    bottom: 0
    a {
        background-color: rgba(63, 63, 63, 0)
    }
}

.hide-labels {
    position: fixed
    left: 42px
    top: 78px
    color: #999
    opacity: .6
    &:hover {
        color: none
        opacity: 1 
    }
}

#post-nav-button {
    display: none
}
/*多说 UA*/
.ua {
    display: none !important
}

#header .social li:nth-child(5n) {
    margin-right: 3px
}

